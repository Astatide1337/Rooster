# ===========================================
# Rooster Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit the .env file to version control

# -------------------------------------------
# Google OAuth Configuration
# -------------------------------------------
# Get these from Google Cloud Console:
# https://console.cloud.google.com/apis/credentials
OAUTH_CLIENT_ID=your-google-client-id
OAUTH_CLIENT_SECRET=your-google-client-secret

# Redirect URI must match what's configured in Google Cloud Console
# For local development: http://localhost:5000/auth
# For production: http://YOUR_SERVER_IP:5000/auth
OAUTH_REDIRECT_URI=http://localhost:5000/auth

# -------------------------------------------
# Application Security
# -------------------------------------------
# Generate a strong secret key for production:
# python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=change-me-to-a-64-character-random-string

# -------------------------------------------
# Frontend URL (for CORS)
# -------------------------------------------
# Local development: http://localhost:5173
# Production: http://YOUR_SERVER_IP
FRONTEND_URL=http://localhost:5173

# -------------------------------------------
# MongoDB Connection
# -------------------------------------------
# Local Docker: mongodb://mongo:27017/class_roster
# MongoDB Atlas: mongodb+srv://user:pass@cluster.mongodb.net/rooster
MONGO_URI=mongodb://localhost:27017/class_roster

# -------------------------------------------
# Debug Mode
# -------------------------------------------
# Set to True for local development only
# NEVER enable in production (exposes stack traces)
FLASK_DEBUG=True

# -------------------------------------------
# Testing Mode (optional)
# -------------------------------------------
# Set to True only when running pytest
# This prevents the app from connecting to real MongoDB
# TESTING=True